<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/RecentPostsMaintextStyle"
        android:id="@+id/post_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/post_fullname"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/post_caption_text"
        app:layout_constraintLeft_toRightOf="@+id/post_image"
        android:layout_marginLeft="44dp"
        app:layout_constraintVertical_bias="0.685" />

    <ImageView
        android:paddingTop="@dimen/standard_padding"
        android:layout_width="@dimen/post_picture_size"
        android:layout_height="@dimen/post_picture_size"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.08"
        android:id="@+id/post_image" />

    <TextView
        android:id="@+id/post_caption_text"
        android:layout_width="336dp"
        android:layout_height="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="0dp"
        android:text="this is a caption about this pictrure"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textView"
        tools:layout_editor_absoluteY="171dp"
        app:layout_constraintHorizontal_bias="0.666" />

    <TextView
        style="@style/RecentPostsMaintextStyle"
        android:padding="@dimen/standard_padding"
        android:text="full name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="16dp"
        android:id="@+id/post_fullname"
        app:layout_constraintLeft_toRightOf="@+id/post_image"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>